#! /bin/bash

key=
kfile=
in=
out=

enc_args=

for (( i=1; i<=$#; i++ ))
do
    param=${!i}
    if [[ $param =~ ^-k$ ]]; then
        option=key # remember for next param
        continue
    elif [[ $param =~ ^-kfile$ ]]; then
        option=kfile
        continue
    fi

    # check previous param, if is a param name, this param should be param value
    case $option in
    key)
        enc_args="${enc_args} -k ${param}"
        option=
        ;;

    kfile)
        enc_args="${enc_args} -kfile ${param}"
        option=
        ;;

    *) if [[ -z $in ]]; then
            in=$param
        elif [[ -z $out ]]; then
            out=$param
            enc_args="${enc_args} -out ${param}"
        fi
    esac
done


if [[ -z $in ]]; then
    echo "Usage: encrypt_file [-k key]|[-kfile key file path] raw_file [out_file]"
    exit -1
fi

openssl aes-256-ecb -a -salt -in $in $enc_args

if [[ $? != 0 ]]; then
    echo # new line
    echo "encrypting file \"${in}\" failed"
    exit $?
fi
